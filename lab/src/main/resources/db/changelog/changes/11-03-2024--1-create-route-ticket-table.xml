<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="11-03-2024--1-create-route-ticket-table">
        <createTable tableName="route_ticket">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="route_id" type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>
            <column name="ticket_id" type="BIGINT">
                <constraints
                        unique="true" uniqueConstraintName="route_ticket_ticket_unique"
                        nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="route_ticket" baseColumnNames="route_id"
                                 constraintName="fk_route_ticket_route"
                                 referencedTableName="route" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
        <addForeignKeyConstraint baseTableName="route_ticket" baseColumnNames="ticket_id"
                                 constraintName="fk_route_ticket_ticket"
                                 referencedTableName="ticket" referencedColumnNames="id"
                                 onDelete="CASCADE" onUpdate="CASCADE"/>
    </changeSet>
</databaseChangeLog>