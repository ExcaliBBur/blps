<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="ShipIM" id="17-02-2024--1-create-route-table">
        <createTable tableName="route">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints
                        primaryKey="true"/>
            </column>
            <column name="departure" type="TIMESTAMP">
                <constraints
                        nullable="false"/>
            </column>
            <column name="train_number" type="BIGINT">
                <constraints
                        nullable="false"/>
            </column>
            <column name="source" type="VARCHAR">
                <constraints
                        nullable="false"/>
            </column>
            <column name="destination" type="VARCHAR">
                <constraints
                        nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="route"/>
        </rollback>
    </changeSet>
</databaseChangeLog>